@{
    ViewBag.Title = "Import New Clients from XML";
}

<h2>Import Clients from XML</h2>

@using (Html.BeginForm("ImportFromXml", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="xmlFile">Select XML File</label>
        <input type="file" name="xmlFile" id="xmlFile" class="form-control" accept=".xml" />
        @Html.ValidationMessage("xmlFile", null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Import" class="btn btn-primary" />
    </div>
}

